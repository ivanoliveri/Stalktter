@model HomeViewModel

<html>
	<head>
		<title>Stalktter</title>
		<link rel="stylesheet" type="text/css" href="../../Content/css/bootstrap.css" />
	</head>
	<body>
		<div class="container">
			<div class="row clearfix">
				<div class="col-md-12 column">
					<ul class="nav nav-tabs">
						<li class="active">
							<a href="#">Home</a>
						</li>
						<li>
							<a href="#">Profile</a>
						</li>
						<li class="disabled">
							<a href="#">Messages</a>
						</li>
						<li class="dropdown pull-right">
							 <a href="#" data-toggle="dropdown" class="dropdown-toggle">Dropdown<strong class="caret"></strong></a>
							<ul class="dropdown-menu">
								<li>
									<a href="#">Action</a>
								</li>
								<li>
									<a href="#">Another action</a>
								</li>
								<li>
									<a href="#">Something else here</a>
								</li>
								<li class="divider">
								</li>
								<li>
									<a href="#">Separated link</a>
								</li>
							</ul>
						</li>
					</ul>
					<div class="row" style="margin-top:15px;">
                    @foreach (LinqToTwitter.Status @tweet in @Model.tweets)
                    {
						<div class="col-md-4">
							<div class="thumbnail">
								<div class="caption" style="height:150px;">                                    
                                    <h3>@tweet.CreatedAt.Date</h3>
                                    <p>
                                        <img style="float:left" src=@Model.twitterProfilePicture />
                                        <h6>@tweet.Text</h6>
                                    </p>
								</div>
							</div>
						</div>
                    }
					</div>
                    <div class="row" style="margin-top:15px;">
                    @foreach (string @photo in @Model.instagramPhotoLinks)
                    {
						<div class="col-md-4">
							<div class="thumbnail">
								<div class="caption" style="height:315px;"> 
                                    <p>
                                        <img src=@photo />
                                    </p>
								</div>
							</div>
						</div>
                    }
					</div>
				</div>
			</div>
		</div>
		<script type="text/javascript" src="../../Content/js/bootstrap.js"></script>
	</body>
</html>
